<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.flogothetispc.alzhaimerfinder.AlzFinder">

    <TextView
        android:id="@+id/textView"
        android:text="Alzhaimer Finder"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:capitalize="characters"
        android:textSize="34dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="false"
        android:fontFamily="@string/abc_shareactionprovider_share_with_application"
        android:textColor="#d82c5ccc"
        android:shadowColor="#f41717" />

    <Button
        android:id="@+id/btnInbox"
        android:text="Setup my device"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="Setup"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="27dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:longClickable="false"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <Button
        android:id="@+id/btnCompose"
        android:text="Find My Alz Finder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="SentSms"
        android:layout_above="@+id/btnInbox"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="59dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/photo"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/btnCompose"
        android:layout_below="@+id/textView" />

</RelativeLayout>
